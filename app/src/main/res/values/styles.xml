<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Strooplocker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ... your existing colors ... -->

        <!-- If you want to remove tint from *all* buttons: -->
        <item name="android:buttonTint">@null</item>
        <item name="materialButtonStyle">@style/Widget.Strooplocker.NoTintButton</item>
    </style>

    <style name="Widget.Strooplocker.NoTintButton" parent="@style/Widget.MaterialComponents.Button">
        <!-- Make sure to remove the background tint attributes: -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>


</resources>
