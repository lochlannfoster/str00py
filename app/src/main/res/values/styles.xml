<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.str00py" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ... your existing colors ... -->

        <!-- If you want to remove tint from *all* buttons: -->
        <item name="android:buttonTint">@null</item>
        <item name="materialButtonStyle">@style/Widget.str00py.NoTintButton</item>
    </style>

    <style name="Widget.str00py.NoTintButton" parent="@style/Widget.MaterialComponents.Button">
        <!-- Make sure to remove the background tint attributes: -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <style name="StroopButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minWidth">96dp</item>
    </style>


</resources>